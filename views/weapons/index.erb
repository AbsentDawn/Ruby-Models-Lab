<h1>Welcome to Square Enix Weapons Gallery</h1>

<% @weapons.each do |weapon| %>
	<div>
		<h3><a href="/<%= weapon.id %>"><%= weapon.name %></a></h3>
	</div>

	<div class="row row-margin">
		<div class="col-lg-9 col-md-6 col-sm-12">
			<img src="http://via.placeholder.com/150x150" class="img-responsive img-circle">
		</div>
	</div>
<% end %>